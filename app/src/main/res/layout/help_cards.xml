<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_10sdp"
    android:layout_margin="@dimen/_12sdp"
    android:layout_marginRight="@dimen/_10sdp"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardElevation="@dimen/_6sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="@dimen/_5sdp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_centerVertical="true"
            android:id="@+id/image_view_new"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_alignLeft="@+id/text_view_linear_layout_help_1"
            android:src="@drawable/ic_launcher_background"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Cancer Treatments "
            android:textColor="@color/black"
            android:layout_gravity="left"
            android:id="@+id/new_text_view_1"
            android:layout_marginLeft="@dimen/_5sdp"
            android:fontFamily="sans-serif-condensed-medium"
            android:textStyle="bold"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Maximum Fund Raised \n â‚¹20 Lakhs"
            android:layout_gravity="left"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/_5sdp"
            android:textStyle="normal"
            android:id="@+id/new_text_view_2"
            android:fontFamily="sans-serif-condensed-light"
            android:textSize="13sp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>